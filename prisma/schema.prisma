generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  email     String @unique
  name      String    
  password  String
  introduce Introduce?
  activity  Activity[]
  basic Basic?
  project Project[]
  workExprience WorkExprience[]
  technology Technology?
  education Education[]
}

model Introduce {
  email   String @unique
  simple  String
  complex String
  user    User   @relation(fields: [email], references: [email])
}

model Activity {
  order   Int    @id @default(autoincrement())
  email   String
  name    String 
  content String
  period  String
  user    User   @relation(fields: [email], references: [email])
}

model Project {
  order     Int    @id @default(autoincrement())
  email     String
  name      String
  introduce String
  period    String
  url       String
  works     String
  skills    String
  images    String
  user    User   @relation(fields: [email], references: [email])
}

model Basic {
  email String @unique
  role  String
  user    User   @relation(fields: [email], references: [email])
}

model WorkExprience {
  order  Int    @id @default(autoincrement())
  email  String 
  name   String
  period String
  role   String
  works  String
  user    User   @relation(fields: [email], references: [email])
}

model Technology {
  email String @unique
  main  String
  sub   String
  user    User   @relation(fields: [email], references: [email])
}

model Education {
  order  Int    @id @default(autoincrement())
  email  String
  name   String
  period String
  user    User   @relation(fields: [email], references: [email])
}